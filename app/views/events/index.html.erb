<% content_for :title, "Events Near You" %>

<div class="container-fluid">
  <div class="row">
    <div class="col s12 m6">
      <h1>Events</h1>
    <div class="flex-container">
      <% @events.each do |event| %>
      <div class="card-panel white hoverable event-card">
        <%= cl_image_tag event.profile.photo, class: "event-profile-pic", alt: "profile_background"  %>
        <span class="black-text">
          <p class="host-description">host</p>

          <p><%= event.start_date.try(:strftime, '%d %B') %></p>
          <p class="due_date">Start time: <%= event.start_time.try(:strftime, "%l:%M %p" ) %></p>
          <%= event.description %>
          </span>
        </div>
      <% end %>
    </div>

  </div>
      <div class="col s12 m6">
      <div class="fixed">

  <div id="map" style="width: 100%; height: 100vh;"></div>
  </div>
  </div>
  </div>
</div>

<% content_for(:after_js) do %>
<%= javascript_tag do %>
$(document).ready(function() {
var styles = [{"featureType":"road","elementType":"geometry","stylers":[{"lightness":100},{"visibility":"simplified"}]},{"featureType":"water","elementType":"geometry","stylers":[{"visibility":"on"},{"color":"#C6E2FF"}]},{"featureType":"poi","elementType":"geometry.fill","stylers":[{"color":"#C5E3BF"}]},{"featureType":"road","elementType":"geometry.fill","stylers":[{"color":"#D1D1B8"}]}]

var handler = Gmaps.build('Google');
handler.buildMap({
provider: {
  styles: styles},
internal: { id: 'map' } }, function() {
markers = handler.addMarkers(<%= raw @hash.to_json %>);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
if (markers.length == 0) {
handler.getMap().setZoom(2);
} else if (markers.length == 1) {
handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
