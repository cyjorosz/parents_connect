<% content_for :title, "#{@event.description}" %>

<h1> <%= @event.description %> </h1>

<!-- will format -->

<div class="row">
  <%= @event.start_date.try(:strftime, "%e %b %Y") %>
  <p> When? <%= @event.start_time %></p>
  <p> Duration <%= @event.duration %></p>
  <%= @event.street_name %>
  <%= @event.street_number %>
  <%= @event.city %>
  <%= @event.zipcode %>
  <%= @event.country %>

</div>

<div class="row">
  <p>attendances are:</p>
  <% @attendances.each do |attendance| %>
  <%= attendance.profile.last_name %>
  <% end %>
</div>



<% if @event.profile == current_user.profile %>
  <h3>you're the host!</h3>
    <%= link_to "Want to cancel the event?", event_path, class: "btn", method: :delete, data: { confirm: "Are you sure?" } %>
<% elsif @event.profile_attending?(@attendances, current_user.profile.id) %>
   <%= link_to "Not attending?", attendance_path, class: "btn", method: :delete %>
<% else %>
  <%= render 'events/attendancebutton' %>
<% end %>
<br>
