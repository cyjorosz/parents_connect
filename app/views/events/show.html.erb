<% content_for :title, "#{@event.description}" %>

<div class="container">


  <h1> <%= @event.description %> </h1>
    <div class="row">
      <div class="col s6" >
      <div class="padding">
        <p> When? <%= @event.start_date.try(:strftime, "%e %b %Y") %> <%= @event.start_time %></p>
        <p> Duration: <%= @event.duration %> minutes </p>
        <p> Where? </p> <%= @event.street_name %>
        <%= @event.street_number %>
        <%= @event.city %>
        <%= @event.zipcode %>
        <%= @event.country %></div>
      </div>
      <div class="col s6">
        <div id="map" style="width: 100%; height: 400px;"></div>
      </div>
  </div>


  <div class="row">
    <div class="col">
      <% if @event.profile == current_user.profile %>
        <h3>you're the host!</h3>
          <%= link_to "Want to cancel the event?", event_path, class: "btn", method: :delete, data: { confirm: "Are you sure?" } %>
      <% elsif @event.profile_attending?(@attendances, current_user.profile.id) %>
         <%= link_to "Not attending?", attendance_path, class: "btn", method: :delete %>
      <% else %>
        <%= render 'events/attendancebutton' %>
      <% end %>

      <p>attendances are:</p>
      <% @attendances.each do |attendance| %>
      <%= attendance.profile.last_name %>
      <% end %>
    </div>
   </div>
  </div>


  <% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
<% end %>
<% end %>
