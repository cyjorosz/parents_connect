<h1>Events#show</h1>

<!-- will format -->

<div class="row">
  <%= @event.description %>
  <%= @event.start_date %>
  <%= @event.start_time %>
  <%= @event.duration %>
  <%= @event.street_name %>
  <%= @event.street_number %>
  <%= @event.city %>
  <%= @event.zipcode %>
  <%= @event.country %>

</div>

<div class="row">
  <p>attendances are:</p>
  <% @attendances.each do |attendance| %>
  <%= attendance.profile.last_name %>
  <% end %>
</div>

<% if @event.profile_attending?(@attendances, current_user.profile.id) %>
   <%= link_to "Not attending?", attendance_path, class: "btn", method: :delete %>
<% else %>
  <%= render 'events/attendancebutton' %>
<% end %>


  <!-- Add host -->
  <!-- Add attendances  -->

  <div id="map" style="width: 100%; height: 400px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
