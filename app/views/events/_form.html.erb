<div class="container">
    <%= simple_form_for [@profile, @event] do |f| %>
        <%= f.input :description %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :start_time%>
        <%= f.input :duration%>
        <%= f.input :street_name %>
        <%= f.input :street_number %>
        <%= f.input :zipcode %>
        <%= f.input :city %>
        <%= f.input :country %>
        <%= f.button :submit, "Create Event", class: "waves-effect waves-light btn yellow darken-4" %>
  <% end %>
</div>
