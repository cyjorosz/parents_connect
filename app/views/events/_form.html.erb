<div class="container">
    <%= simple_form_for [@profile, @event] do |f| %>
        <%= f.input :description %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :start_time, as: :hidden%>


            <div class="materialPicker timepicker container">
                <div class="row">
                    <div class="col s 6">
                        <div class="timeContainer first">
                            <div class="waves-effect waves-light btn pickerButton btnUpHour">
                                <i class="material-icons">add</i>
                            </div>
                            <div class="timenumber center" id="time-hour">
                                15
                            </div>
                            <div class="waves-effect waves-light btn pickerButton btnDownHour">
                                <i class="material-icons">remove</i>
                            </div>
                        </div>
                    </div>

                    <div class="col s 6">
                        <div class="timeContainer second">
                            <div class="waves-effect waves-light btn pickerButton btnUpMinute">
                                <i class="material-icons">add</i>
                            </div>
                            <div class="timenumber center" id="time-minute">
                                00
                            </div>
                            <div class="waves-effect waves-light btn pickerButton btnDownMinute">
                                <i class="material-icons">remove</i>
                            </div>
                        </div>
                  </div>
                </div>
            </div>


        <%= f.input :duration %>
        <%= f.input :street_name %>
        <%= f.input :street_number, as: :hidden %>
        <%= f.input :zipcode %>
        <%= f.input :city %>
        <%= f.input :country %>
        <%= f.button :submit, "Create Event", class: "waves-effect waves-light btn yellow darken-4", id: "event-submit-button" %>
  <% end %>
</div>
